script Zone0Sanctuary_EventScript_Intro {
    lockall
	clearflag(FLAG_SETTINGS_NUZLOCKE)
	setflag(FLAG_SYS_B_DASH)
	setflag(FLAG_SYS_POKEMON_GET)
	setflag(FLAG_SYS_PC_LANETTE)
	setflag(FLAG_AUTORUN_TOGGLE)
	call(EventScript_MoveCameraUp)
	applymovement(1, Common_Movement_ExclamationMark)
	playse(SE_PIN)
	waitmovement(0)
	waitse
	applymovement(OBJ_EVENT_ID_PLAYER, Common_Movement_FaceUp)
	msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: Ah. You've arrived."), MSGBOX_AUTOCLOSE)
	applymovement(1, Common_Movement_WalkDown3)
	call(EventScript_MoveCameraDown)
	waitmovement(0)
	msgbox("Welcome to the\n{COLOR RED}Pokémon Battle Labyrinth{COLOR DARK_GRAY}.\pI am your guide for braving the\nchallenges ahead.\pWould you like to listen to the tutorial?", MSGBOX_YESNO)
	if (var(VAR_RESULT) == YES) {
		setvar(VAR_TEMP_5, 1) // VAR_TEMP_5: 1 means yes tutorial
		msgbox(format("The Pokémon Battle Labyrinth is comprised of many {COLOR RED}Zones{COLOR DARK_GRAY} you must traverse.\p"
		"In these Zones, you might encounter wild Pokémon, great treasures, tough trainers, and more.\p"
		"Each Zone typically contains a {COLOR RED}Leviathan{COLOR DARK_GRAY}, a boss that yields great rewards if defeated.\p"
		"At the end of each Zone and before the next Zone begins, you will find a {COLOR RED}Sanctuary{COLOR DARK_GRAY}, like this one, with shops to purchase supplies, heal your Pokémon, and other benefits.\p"
		"Once you enter a new Zone, you will not be able to access a Sanctuary until you exit that Zone.\p"
		"In order to win, you must progress through all Zones without losing a battle."), MSGBOX_AUTOCLOSE)
		delay(16)
	}
	questmenu(QUEST_MENU_SET_ACTIVE, QUEST_PBL)
	setflag(FLAG_SETTINGS_EXP_ALL)
	msgbox(format("Pokémon Battle Labyrinth has many settings that are customizable, including {COLOR RED}Nuzlocke{COLOR DARK_GRAY} mode,\l{COLOR RED}Randomizer{COLOR DARK_GRAY} mode, and difficulty options.\pWould you like to modify these settings now from the default?"), MSGBOX_YESNO)
	if (var(VAR_RESULT) == YES) {
		setvar(VAR_TEMP_1, 1) // VAR_TEMP_1: 1 means dealing w/ settings menu, 2 means done w/ it
		msgbox(format("Note that some settings cannot be adjusted once the challenge has started.\pIf you're looking to play the hardest game mode, {COLOR RED}Brutal{COLOR DARK_GRAY} automatically enables most of the difficulty settings.\pOtherwise, information about each individual setting can be found by selecting it."), MSGBOX_DEFAULT)
		while (var(VAR_TEMP_1) == 1) {
			call(EventScript_Settings)
			msgbox(format("Are you sure you are done selecting your settings?"), MSGBOX_YESNO)
			if (var(VAR_RESULT) == YES) {
				setvar(VAR_TEMP_1, 0)
			}
		}
		msgbox(format("Settings saved!"), MSGBOX_DEFAULT)
	}
	delay(16)
	if (var(VAR_TEMP_5) == 1) {
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: Allow me to show you each of the shops."), MSGBOX_AUTOCLOSE)
		applymovement(1, Zone0Sanctuary_Movement_Colress_FirstShop)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_FirstShop)
		waitmovement(0)
		special(SpawnCameraObject)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp2)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: This shop is {COLOR RED}Portentia's Potions{COLOR DARK_GRAY}.\p"
		"Healing supplies, such as Potions or other curative measures, can be found here."), MSGBOX_AUTOCLOSE)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown2)
		waitmovement(0)
		special(RemoveCameraObject)
		applymovement(1, Zone0Sanctuary_Movement_Colress_SecondShop)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_SecondShop)
		waitmovement(0)
		special(SpawnCameraObject)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp2)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: This shop is {COLOR RED}Tim's Pokéball Shop{COLOR DARK_GRAY}.\p"
		"They have a variety of Pokéballs to buy."), MSGBOX_AUTOCLOSE)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown2)
		waitmovement(0)
		special(RemoveCameraObject)
		applymovement(1, Zone0Sanctuary_Movement_Colress_ThirdShop)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_ThirdShop)
		waitmovement(0)
		special(SpawnCameraObject)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp2)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: This shop is {COLOR RED}Julia's Berries{COLOR DARK_GRAY}.\p"
		"Julia is a legendary chef who curates a selection of Berries for Pokémon."), MSGBOX_AUTOCLOSE)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown2)
		waitmovement(0)
		special(RemoveCameraObject)
		applymovement(1, Zone0Sanctuary_Movement_Colress_FourthShop)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_FourthShop)
		waitmovement(0)
		special(SpawnCameraObject)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp2)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: This shop is {COLOR RED}Marie's Egg Delivery Service{COLOR DARK_GRAY}.\p"
		"Marie helps match Pokémon eggs with new owners."), MSGBOX_AUTOCLOSE)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown2)
		waitmovement(0)
		special(RemoveCameraObject)
		applymovement(1, Zone0Sanctuary_Movement_Colress_FifthShop)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_FifthShop)
		waitmovement(0)
		special(SpawnCameraObject)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp2)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: This shop is {COLOR RED}Varrick's Extravagant Emporium{COLOR DARK_GRAY}.\p"
		"A huge variety of items are sold here."), MSGBOX_AUTOCLOSE)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown2)
		waitmovement(0)
		special(RemoveCameraObject)
		applymovement(1, Zone0Sanctuary_Movement_Colress_SixthShop)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_SixthShop)
		waitmovement(0)
		special(SpawnCameraObject)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp2)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: This shop is {COLOR RED}Lelouch's Services Shop{COLOR DARK_GRAY}.\p"
		"He only sees customers who can pay his price."), MSGBOX_AUTOCLOSE)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown2)
		waitmovement(0)
		special(RemoveCameraObject)
		applymovement(1, Zone0Sanctuary_Movement_Colress_ToPokemonCenter)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_ToPokemonCenter)
		waitmovement(0)
		special(SpawnCameraObject)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkRight)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp2)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: This is the {COLOR RED}Pokémon Center{COLOR DARK_GRAY}, though don't let Joy catch you saying that.\pYour Pokémon can be healed at a flat fee.\pIn addition, inside you might find people with advice or aid for you.\pNote the building has a back entrance for ease of access.\pYou can also access {COLOR RED}Zone 0{COLOR DARK_GRAY} on the right inside."), MSGBOX_AUTOCLOSE)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown2)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkLeft)
		waitmovement(0)
		special(RemoveCameraObject)
		applymovement(1, Zone0Sanctuary_Movement_Colress_BackMid)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_BackMid)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: Our tour has finished.\p"
		"These shops will be available at every Sanctuary.\p"
		"As you progress through more Zones, more items and services will unlock.\p"
		"Also, it is highly recommended you stock up on any supplies before entering the next Zone."), MSGBOX_AUTOCLOSE)
		delay(16)
	}
	if (flag(FLAG_SETTINGS_RANDOMIZER) == true) {
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: Because the {COLOR RED}Randomizer{COLOR DARK_GRAY} is on, you get a random starter."))
		callnative(GiveRandomStarter)
		playfanfare(MUS_OBTAIN_ITEM)
		bufferleadmonspeciesname(0)
		message(format("{PLAYER} received the {STR_VAR_1}!"))
		waitmessage
		waitfanfare
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: How about a nickname for your {STR_VAR_1}?"), MSGBOX_YESNO)
		if (var(VAR_RESULT) == YES) {
			setvar(VAR_0x8004, 0)
			call(Common_EventScript_NameReceivedPartyMon)
		}
		goto(Zone0Sanctuary_EventScript_EndIntro)
	}
	if (flag(FLAG_SETTINGS_BRUTAL) == true) {
		msgbox(format("As a new challenger, you will receive a starter Pokémon.\p"
		"On Brutal difficulty, your choice is limited from the pool of possible starters to only three options.\p"
		"Choose carefully as these Pokémon are very rare."))
		special(ChooseStarter)
		waitstate
		bufferleadmonspeciesname(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: How about a nickname for your {STR_VAR_1}?"), MSGBOX_YESNO)
		if (var(VAR_RESULT) == YES) {
			setvar(VAR_0x8004, 0)
			call(Common_EventScript_NameReceivedPartyMon)
		}
		goto(Zone0Sanctuary_EventScript_EndIntro)
	} else {
		msgbox(format("As a new challenger, you will receive a starter Pokémon.\p"
		"You may have your choice of any of the generation 1-9 starter Pokémon.\p"
		"Choose carefully as these Pokémon are very rare."))
		goto(Zone0Sanctuary_EventScript_HandleStarterSelectionDefault)
	}
}

