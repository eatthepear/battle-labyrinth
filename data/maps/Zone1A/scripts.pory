script Zone1A_EventScript_GiveFWG {
	lock
	faceplayer
	msgbox(format("Hello! You look like a new trainer.\pDo you know about Pokémon type matchups?"), MSGBOX_YESNO)
	if (var(VAR_RESULT) == NO) {
		msgbox(format("Type matchups are one of the most important parts of Pokémon battles!\pThe most basic type matchup is Grass beats Water, Water beats Fire, and Fire beats Grass.\pIt can be very important to have a diversity of types on your team."), MSGBOX_DEFAULT)
	} else {
		msgbox(format("Oh! Then I'm sure you could see the benefits of having a diversity of types on your team."), MSGBOX_DEFAULT)
	}
	msgbox(format("I'm offering trainers a Grass, Fire, or Water type Pokémon to help supplement their teams. Interested?"), MSGBOX_YESNO)
	if (var(VAR_RESULT) == NO) {
		msgbox(Zone1A_Text_FWG_ComeBack)
		release
		end
	}
	message(format("Do you want a Grass, Fire, or Water type?"))
	dynmultichoice(0, 0, FALSE, 4, 0, DYN_MULTICHOICE_CB_NONE, "Grass", "Fire", "Water", "Exit")
	switch (var(VAR_RESULT)) {
		case 0:
			setvar(VAR_TEMP_4, 0)
		case 1:
			setvar(VAR_TEMP_4, 1)
		case 2:
			setvar(VAR_TEMP_4, 2)
		case 3:
		case MULTI_B_PRESSED:
			msgbox(Zone1A_Text_FWG_ComeBack)
			release
			end
	}
	if (flag(FLAG_SETTINGS_NUZLOCKE) == true) {
		if (flag(FLAG_SETTINGS_RANDOMIZER) == true) {
			setvar(VAR_TEMP_1, SPECIES_BULBASAUR) // gets randomized anyways
		} else {
			if (var(VAR_TEMP_4) == 0) {
				msgbox(format("On Nuzlocke mode, you will randomly receive one of the possible Pokémon: Pansage, Cacnea, Sunkern, Smoliv, or Bounsweet.\pIs this ok?"), MSGBOX_YESNO)
				if (var(VAR_RESULT) == NO) {
					msgbox(Zone1A_Text_FWG_ComeBack)
					release
					end
				}
				setvar(VAR_TEMP_3, 0)
				checkspeciesclause(SPECIES_PANSAGE)
				if (var(VAR_RESULT) == TRUE) {
					addvar(VAR_TEMP_3, 1)
				}
				checkspeciesclause(SPECIES_CACNEA)
				if (var(VAR_RESULT) == TRUE) {
					addvar(VAR_TEMP_3, 1)
				}
				checkspeciesclause(SPECIES_SUNKERN)
				if (var(VAR_RESULT) == TRUE) {
					addvar(VAR_TEMP_3, 1)
				}
				checkspeciesclause(SPECIES_SMOLIV)
				if (var(VAR_RESULT) == TRUE) {
					addvar(VAR_TEMP_3, 1)
				}
				checkspeciesclause(SPECIES_BOUNSWEET)
				if (var(VAR_RESULT) == TRUE) {
					addvar(VAR_TEMP_3, 1)
				}
				if (var(VAR_TEMP_3) == 5) {
					msgbox(format("Unfortunately, you have already obtained a Pokémon in each of these evolution lines."))
					release
					end
				}
				setvar(VAR_TEMP_1, 0)
				while (var(VAR_TEMP_1) == 0) {
					random(5)
					switch (var(VAR_RESULT)) {
						case 0:
							checkspeciesclause(SPECIES_PANSAGE)
							if (var(VAR_RESULT) == TRUE) {
								continue
							}
							setvar(VAR_TEMP_1, SPECIES_PANSAGE)
						case 1:
							checkspeciesclause(SPECIES_CACNEA)
							if (var(VAR_RESULT) == TRUE) {
								continue
							}
							setvar(VAR_TEMP_1, SPECIES_CACNEA)
						case 2:
							checkspeciesclause(SPECIES_SUNKERN)
							if (var(VAR_RESULT) == TRUE) {
								continue
							}
							setvar(VAR_TEMP_1, SPECIES_SUNKERN)
						case 3:
							checkspeciesclause(SPECIES_SMOLIV)
							if (var(VAR_RESULT) == TRUE) {
								continue
							}
							setvar(VAR_TEMP_1, SPECIES_SMOLIV)
						case 4:
							checkspeciesclause(SPECIES_BOUNSWEET)
							if (var(VAR_RESULT) == TRUE) {
								continue
							}
							setvar(VAR_TEMP_1, SPECIES_BOUNSWEET)
					}
				}
			} elif (var(VAR_TEMP_4) == 1) {
				msgbox(format("On Nuzlocke mode, you will randomly receive one of the possible Pokémon: Pansear, Slugma, Salandit, Vulpix, or Sizzlipede.\pIs this ok?"), MSGBOX_YESNO)
