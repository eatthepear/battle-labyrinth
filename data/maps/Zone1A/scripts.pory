				}
				if (var(VAR_TEMP_3) == 5) {
					msgbox(format("Unfortunately, you have already obtained a Pokémon in each of these evolution lines."))
					release
					end
				}
				setvar(VAR_TEMP_1, 0)
				while (var(VAR_TEMP_1) == 0) {
					random(5)
					switch (var(VAR_RESULT)) {
						case 0:
							checkspeciesclause(SPECIES_PANSEAR)
							if (var(VAR_RESULT) == TRUE) {
								continue
							}
							setvar(VAR_TEMP_1, SPECIES_PANSEAR)
						case 1:
							checkspeciesclause(SPECIES_SLUGMA)
							if (var(VAR_RESULT) == TRUE) {
