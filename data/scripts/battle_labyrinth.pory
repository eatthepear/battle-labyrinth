script EventScript_Collector {
	lock
	faceplayer
	if (flag(FLAG_ZONE0A_SAFARI_INTRO) == false) {
		msgbox(format("Hello there!\pAre you interested in seeing Pokémon you might not be able to see elsewhere?\pCome and see my Safari Zones!\pFor beginning Safari enjoyers, one area is unlocked and accessible.\pYou can pay to unlock more areas, unlocking access to more rare Pokémon!"))
		setflag(FLAG_ZONE0A_SAFARI_INTRO)
	}
	message("Where do you want to go?")
	waitmessage
	if (var(VAR_REVISITING_ZONE) != 1) {
		dynmultipush("{COLOR GREEN}S1 - Beginner Safari", 1)
	}
	if (var(VAR_REVISITING_ZONE) != 2) {
		if (var(VAR_ZONE_0_STATE) > 1) {
			dynmultipush("{COLOR GREEN}S2 - Forest River Safari", 2)
		} elif (var(VAR_ZONE_0_STATE) == 1) {
			dynmultipush("S2 - Unlock for ¥500", 12)
		}
	}
	if (var(VAR_REVISITING_ZONE) == 0) {
		dynmultipush("Exit", 0)
	} else {
		dynmultipush("Return to Zone 0", 11)
	}
	dynmultistack(21, 0, FALSE, 6, FALSE, 0, DYN_MULTICHOICE_CB_NONE)
	switch (var(VAR_RESULT)) {
		case 0:
			msgbox(format("See you around sometime."))
		case 1:
			msgbox(format("Alright, let's go!"), MSGBOX_AUTOCLOSE)
			setvar(VAR_REVISITING_ZONE, 1)
			warp(MAP_ZONE_S1A, 255, 11, 18)
			waitstate
		case 2:
			msgbox(format("Alright, let's go!"), MSGBOX_AUTOCLOSE)
			setvar(VAR_REVISITING_ZONE, 2)
			warp(MAP_ZONE_S2A, 255, 10, 17)
			waitstate
		case 11:
			setvar(VAR_REVISITING_ZONE, 0)
			warp(MAP_ZONE0A, 255, 71, 9)
			waitstate
		case 12:
			showmoneybox(0, 0, 0)
			msgbox(format("So, you're interested in unlocking S2 for ¥500?"), MSGBOX_YESNO)
			if (var(VAR_RESULT) == YES) {
				checkmoney(500, 0)
				if (var(VAR_RESULT) == FALSE) {
					msgbox("You don't have enough money.")
				} else {
					removemoney(500)
					updatemoneybox
					playfanfare(MUS_OBTAIN_ITEM)
					msgbox(format("Alright! You unlocked {COLOR GREEN}S2 - Forest River Safari{COLOR DARK_GRAY} for ¥500!"))
					waitfanfare
					setvar(VAR_ZONE_0_STATE, 2)
				}
			}
			hidemoneybox
			msgbox(format("See you around sometime."))
	}
	release
	end
}

script EventScript_Notebook {
	playbgm(MUS_HG_FOLLOW_ME_1, FALSE)
	while {
		message(format("Notebook open.\nWhat would you like to read?"))
		waitmessage
		dynmultipush("Changes from Vanilla", 0)
		dynmultipush("Close Notebook", 4)
		dynmultistack(0, 0, FALSE, 6, FALSE, 0, DYN_MULTICHOICE_CB_NONE)
		switch (var(VAR_RESULT)) {
			case 0:
				call(EventScript_Notebook_ChangesFromVanilla)
			case 4:
			case MULTI_B_PRESSED:
				fadedefaultbgm
				releaseall
				end
		}
	}
}

script EventScript_Notebook_ChangesFromVanilla {
	while {
		message(format("Changes from Vanilla open.\nAnything not listed is vanilla."))
		waitmessage
		dynmultipush("Pokémon", 0)
		dynmultipush("Battle", 1)
		dynmultipush("Items", 2)
		dynmultipush("Other", 3)
		dynmultipush("Back", 4)
		dynmultistack(0, 0, FALSE, 6, FALSE, 0, DYN_MULTICHOICE_CB_NONE)
		switch (var(VAR_RESULT)) {
			case 0:
				call(EventScript_Notebook_Pokemon)
			case 1:
				call(EventScript_Notebook_Battle)
			case 2:
				call(EventScript_Notebook_Items)
			case 3:
				call(EventScript_Notebook_Other)
			case 4:
			case MULTI_B_PRESSED:
				return
		}
	}
}

script EventScript_Notebook_Pokemon {
	while {
		message(format("Pokémon Changes open.\nAnything not listed is vanilla."))
		waitmessage
		dynmultipush("Learnsets", 0)
		dynmultipush("Abilities", 1)
		dynmultipush("Evolutions", 2)
		dynmultipush("Friendship", 3)
		dynmultipush("Back", 4)
		dynmultistack(0, 0, FALSE, 6, FALSE, 0, DYN_MULTICHOICE_CB_NONE)
		switch (var(VAR_RESULT)) {
			case 0:
				msgbox(format("All Pokémon can only learn moves they could learn in vanilla.\pAll Pokémon have edited level-up learnsets and may learn moves earlier than they do in vanilla.\pYou can see what moves Pokémon learn in the Pokédex."))
			case 1:
				msgbox(format("Some Pokémon have one of their regular Abilites swapped with their hidden ability.\pRead which ones?"), MSGBOX_YESNO)
				if (var(VAR_RESULT) == YES) {
					msgbox(format("All Pokémon that get Regenerator, Sand Stream, Snow Warning, Drought, or Drizzle as regular abilities now have those abilities as Hidden Abilities instead, and their original Hidden Ability is now a regular ability.\pTheir pre-evolution's abilities may also have been moved around as a result.\pYou can see what abilites Pokémon have in the Pokédex."))
				}
			case 2:
				msgbox(format("Many Pokémon have evolution methods that are another option from their default or directly replace the default.\pThis includes Day/Night evolutions, Friendship evolutions, weak Pokémon evolutions, and hard to achieve evolutions.\pYou can see how to evolve a Pokémon in the Pokédex."))
			case 3:
				msgbox(format("Friendship is always considered maxed out."))
			case 4:
			case MULTI_B_PRESSED:
				return
		}
	}
}

